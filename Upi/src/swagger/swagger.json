{
  "openapi": "3.0.0",
  "info": {
    "title": "Cashfree Payment ",
    "version": "1.0.0",
    "description": "API for  generating Payment Links using Cashfree Sandbox."
  },
  "servers": [
    {
      "url": "https://upi-10wl.onrender.com/api",
      "description": "Render"
    },
    {
      "url": "http://localhost:5000/api",
      "description": "Local Host"
    }
  ],
  "tags": [
    {
      "name": "Verification",
      "description": "Bank Account and UPI Validation (Secure ID)"
    },
    {
      "name": "Payments",
      "description": "Payment Gateway Links and Status Checks"
    }
  ],
  "paths": {
    
    "/pay/create": {
      "post": {
        "summary": "Create a Payment Link",
        "description": "Generates a payment link for a user to make a payment.",
        "tags": ["Payments"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["amount", "phone"],
                "properties": {
                  "amount": {
                    "type": "number",
                    "example": 100.50
                  },
                  "phone": {
                    "type": "string",
                    "example": "9999999999"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Link Created Successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "Link Generated Successfully" },
                    "paymentLink": { "type": "string", "example": "https://sandbox.cashfree.com/pay/link/LINK_123..." },
                    "linkId": { "type": "string", "example": "LINK_1763719653798" }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/pay/verify/{linkId}": {
      "get": {
        "summary": "Check Payment Status",
        "description": "Checks if a specific Payment Link has been paid.",
        "tags": ["Payments"],
        "parameters": [
          {
            "in": "path",
            "name": "linkId",
            "schema": { "type": "string" },
            "required": true,
            "example": "LINK_1763719653798",
            "description": "The Link ID received from the Create Link API"
          }
        ],
        "responses": {
          "200": {
            "description": "Status Fetched Successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "paid": { "type": "boolean", "example": true },
                    "status": { "type": "string", "example": "PAID", "enum": ["PAID", "ACTIVE", "EXPIRED"] },
                    "amount": { "type": "number", "example": 100.50 },
                    "transactions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "transaction_id": { "type": "string" },
                          "payment_method": { "type": "string" },
                          "payment_time": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": { "description": "Link ID not found" }
        }
      }
    }
  }
}